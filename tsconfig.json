{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": false,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/utils/*": ["app/utils/*"],
      "@/context/*": ["app/context/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "backend/server.ts"],
  "exclude": ["node_modules"]
}
